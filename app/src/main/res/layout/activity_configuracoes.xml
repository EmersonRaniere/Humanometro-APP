<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.edu.ifpb.tsi.pdm.emersonraniere.Activities.ConfiguracoesActivity">

    <include layout="@layout/app_bar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_notification"
            android:id="@+id/btn_settings_notification"
            android:gravity="center"
            android:layout_weight="0.33"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel_notification"
            android:id="@+id/btn_settings_cancel_notification"
            android:gravity="center"
            android:layout_weight="0.33"
            android:layout_margin="10dp" />
    </LinearLayout>



</LinearLayout>
